<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.anonymous.brainsync.SuccessActivity"
    android:background="@color/blue">
    
    xmlns:ads="http://schemas.android.com/apk/res-auto">

    <TextView android:text="@string/success" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"


        android:id="@+id/success"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:id="@+id/timertext"
        android:textSize="20dp"
        android:layout_below="@id/success"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/timerfield"
        android:layout_below="@id/timertext"/>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_below="@id/timerfield"/>


       <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Another Entry"
        android:layout_below="@id/timerfield"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:id="@+id/addnewentry"
        android:onClick="addNewEntryMethod"
        android:background="@android:color/transparent"
        />

    <View
        android:layout_width="200dp"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_below="@id/addnewentry"
        android:layout_centerHorizontal="true"
        android:fadingEdge="horizontal"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listallentries"
        android:text="@string/list_all_entry"
        android:layout_below="@id/addnewentry"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:onClick="listAllEntries"
        android:background="@android:color/transparent"/>

    <View
        android:layout_width="150dp"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_below="@id/listallentries"
        android:layout_centerHorizontal="true"
        android:fadingEdge="horizontal"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/returnhome"
        android:text="@string/return_home"
        android:layout_below="@+id/listallentries"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:onClick="returnHomeMethod"
        android:background="@android:color/transparent"/>
        />
    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_unit_id">
    </com.google.android.gms.ads.AdView>

        android:background="@android:color/transparent"/>

</RelativeLayout>
